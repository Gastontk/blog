<h1>welcome to articles#index</h1>
<h2>Here we list articles</h2>
<table>
	<tr>
		<th>Title</th>
		<th>Text</th>
	</tr>
	<% @articles.each do |a| %>
	<tr>
		<td><%= a.title %></td>
		<td> <%= a.text %></td>
		<td><%= link_to 'Show', article_path(a) %></td>
		<td><%= link_to 'Edit', edit_article_path(a) %></td>
		<td><%= link_to 'Delete/Destroy', article_path(a), method: :delete, data:{confirm: 'Sure?'} %> </td>
	</tr>
	<% end %>
</table>

<%= link_to 'New article', new_article_path %>
